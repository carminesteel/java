package ex07;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		System.out.println("100 : 1~100까지의 합계 10 : 1~10까지의 합계 0 : 프로그램 종료");
		Scanner scan = new Scanner(System.in);
		int number = scan.nextInt();
		switch(number) {
		case 100 : 
					int sum=0;
				    int i=0;
				    while(i<100) {		
					i=i+1; 
					sum = sum + i; 	
				}
				System.out.println(sum);
		}

		
		}

}
