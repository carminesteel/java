package ex06;

public class Sample {

	public static void main(String[] args) {
		int i = 1;
		int sum = 0;
		
		while(i<100) {
			i=i+1; // i값을 1씩 증가시킨다.
			sum = sum + i; // i값을 sum에 누적시킨다 (sum+=i)			
		}
		System.out.println(i);
		
		//0~100 짝수합계
		while(i<100) {
			i=0;
			i=i+2; // i값을 1씩 증가시킨다.
			sum = sum + i; // i값을 sum에 누적시킨다 (sum+=i)			
		}
		System.out.println(i);
		//1~99 홀수합계
		while(i<100) {
			i=1;
			i=i+2; // i값을 1씩 증가시킨다.
			sum = sum + i; // i값을 sum에 누적시킨다 (sum+=i)			
		}
		System.out.println(i);
	}

}
