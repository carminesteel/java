package ex03;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.Scanner;

public class Sample {

	public static void main(String[] args) throws Exception {
		
		String driver = "oracle.jdbc.driver.OracleDriver";
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String user = "system";
		String password = "1234";
		
		Class.forName(driver);
		Connection con=DriverManager.getConnection(url, user, password);
		
		String sql=null;
		PreparedStatement ps=null;
		ResultSet rs=null;
		
		Scanner s = new Scanner(System.in);
		
		
		
		boolean run =true;
		while(run) {
			System.out.println("---------------------------------------------");
			System.out.println("1.성적입력 | 2.성적조회 | 3.성적수정 | 4.프로그램종료");
			System.out.println("---------------------------------------------");
			System.out.print("메뉴선택 > ");
			int menu = s.nextInt();
			switch(menu) {
			case 1:
				boolean run2 = false;
				while(run2==false) {
					SungjukVO sjv = new SungjukVO();
					System.out.print("번호 > ");
					sjv.setSno(s.next());
					sql="select * from tbl_student where sno=?";
					ps=con.prepareStatement(sql);
					ps.setString(1, sjv.getSno());
					rs=ps.executeQuery();
					if(rs.next()) {
						System.out.println("이름 :"+rs.getString("sname"));
						System.out.print("몇월 > ");
						sjv.setSmonth(s.next());
						System.out.print("국어 > " );
						sjv.setKor(s.nextInt());
						System.out.print("영어 > " );
						sjv.setEng(s.nextInt());
						System.out.print("수학 > " );
						sjv.setMat(s.nextInt());				
						
						sql = "insert into tbl_sungjuk (smonth,kor,eng,mat) values (?,?,?,?)";
						ps = con.prepareStatement(sql);
						ps.setString(1, sjv.getSmonth());
						ps.setInt(2, sjv.getKor());
						ps.setInt(3, sjv.getEng());
						ps.setInt(4, sjv.getMat());
						ps.execute();
						
						System.out.println("입력완료");
						run2 = true;
					}else {
						run2 = false;
					}
				}
				
				
				break;
			case 2:
				break;
			case 3:
				break;
			case 4:
				run=false;
				System.out.println("프로그램 종료");

				
			}
		}
				
		
	}

}
