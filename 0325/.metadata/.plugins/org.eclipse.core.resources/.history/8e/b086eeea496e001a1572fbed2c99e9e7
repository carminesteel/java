package ex03;

import java.util.Scanner;

public class Sample {

	public static void method1() {
		Scanner s = new Scanner(System.in);
		int sum = 0;
		int scan = s.nextInt();
	}
	
	
	public static void main(String[] args) {
		boolean run = true;
		while(run) {				
			int speed = 0;
			int go = speed +1;
			System.out.println("-------------------------");
			System.out.println("1. 증속 | 2. 감속 | 3.중지");
			System.out.println("-------------------------");
			Scanner s = new Scanner(System.in);
			int menu = s.nextInt();
			switch (menu) {
			case 1 :

				System.out.print("선택 1 : \n");
				System.out.print("현재 속도 = " + (speed +1) + "\n");
				break;
				
			case 2 : 
				System.out.print("선택 2 : \n");
				System.out.print("현재 속도 = \n");
				break;	
				
			case 3 : 
				System.out.print("선택 3 : \n");
				System.out.print("프로그램 종료 = \n");
				run = false;
				break;	
			
			}
	
		}
	}
		
}


