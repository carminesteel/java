package ex01;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		
		Scanner s = new Scanner(System.in);
		
		boolean run = true;
		
		while(run){
			System.out.println("-------------------------------");
			System.out.println("1.입력 | 2.출력 | 3.삭제 | 4.종료");
			System.out.println("-------------------------------");
			System.out.print("작업선택 > ");
			int menu = s.nextInt();
			
			switch(menu) {
			case 1 :
				break;
			case 2 :
				break;
			case 3 :
				break;
			case 4 :
				run = false;
				System.out.println("프로그램 종료");
			}
		}
				
		
	}

}
