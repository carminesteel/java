package ex04;

//성정 관리용 클래스
public class Grade {
	//필드
	
	String sno;
	String sname;
	int kor;
	int eng;
	int mat;
	int tot;
	double avg;
	char grade;
	
	//기본생성자
	public Grade() {
		
	}
	
	//생성자
	public Grade(String sno, String sname, int kor, int eng, int mat) {

		this.sno = sno;
		this.sname = sname;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
	}
	
	//메소드
	int total (int kor, int eng, int mat) {
		return kor + eng + mat;
	}
	//메소드 출력
	void printgrade(Grade g) {
		this.tot=this.kor + this.eng + this.mat;
		this.avg=this.tot/3.;
		this.grade=grade(this.avg);
		System.out.println(this.sno+"\t"+this.sname+"\t"+this.kor+"\t"+this.eng+"\t"+this.mat+"\t"+this.tot+"\t"+this.avg+"\t"+this.grade);
		System.out.println();
	}
	
	char grade(double avg) {
		if(avg>=90) {
			return 'A';
		}else if(avg>=80) {
			return 'B';
		}else if(avg>=70) {
			return 'C';
		}else if(avg>=60) {
			return 'D';	
		}else {
			return 'F';
		}	
	}
}
